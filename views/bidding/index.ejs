<h> Wanna put something for auction</h>
<a href="/bidding/sell">Click here !!</a>

<h2>Product Table</h2>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Base Price</th>
      <th>current Bidding Price</th>
      <th>Time left</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
    <tr>
      <td>
          <img src="images/<%= product.imageUrl %>" width="10" height="10">
      </td>
      <td>
        <a>
          <%= product.productName %>
        </a>
      </td>
      <td>
        <%= product.description %>
      </td>
      <td>
        <%= product.price %>
      </td>
      <td>
        <%= product.currentPrice %>
      </td>
      <td>
        <%  let hours=parseInt(product.remainingTime);
            let min=parseInt((product.remainingTime *60)%60);
            let sec=parseInt((product.remainingTime *3600)%60);
            <!-- console.log(hours," : ", min," : ",sec); -->
        %>
        <%= hours %> hours and <%= min %> minutes
      </td>
      <td>
        <%= product.category %>
      </td>
      <td>
        <a href="<%=`/bidding/${product._id}/placeBid`%>">
          Place BID
        </a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>